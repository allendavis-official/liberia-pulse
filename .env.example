# .env.example
# Copy this to .env.local for local development
# Add these to Vercel Environment Variables for production

# ===================================
# DATA SOURCE CONFIGURATION
# ===================================

# Set to "true" to fetch data from GitHub (for Vercel production)
# Set to "false" to use local filesystem (for development)
USE_GITHUB_RAW=false

# Your GitHub repository (only needed if USE_GITHUB_RAW=true)
# Format: "username/repository-name"
GITHUB_REPO=your-username/liberian-pulse

# Branch to fetch data from (default: main)
GITHUB_BRANCH=main

# ===================================
# OPTIONAL: ANALYTICS & MONITORING
# ===================================

# Google Analytics tracking ID (optional)
NEXT_PUBLIC_GA_ID=

# Sentry DSN for error tracking (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ===================================
# OPTIONAL: EXTERNAL SERVICES
# ===================================

# Vercel Blob Storage (if you switch to Blob later)
BLOB_READ_WRITE_TOKEN=

# Supabase (if you switch to database later)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=